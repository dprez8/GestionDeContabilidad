                router: router,
                watch: {
                    $route(to, from) {
                        this.updateBreadcrumb();
                    }
                },
                mounted() {
                    this.updateBreadcrumb();
                }
            });
            
            function convertDate(date) {
                var dateParsed = new Date(Date.parse(date));
                return ('0' + dateParsed.getDate()).slice(-2) + '/'
                    + ('0' + (dateParsed.getMonth()+1)).slice(-2) + '/'
                    + dateParsed.getFullYear();
            }
